<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/markNote_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/markDate_textView"
        app:layout_constraintStart_toEndOf="@+id/mark_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mark_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Mark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/markNote_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/markDate_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/markEntry_selectionCheckBox"
        app:layout_constraintStart_toEndOf="@+id/markNote_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/markEntry_selectionCheckBox"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>